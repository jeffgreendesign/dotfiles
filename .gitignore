# wordpress: ignore everything in the root except the "wp-content" directory.
!wp-content/

# wordpress: ignore everything in the "wp-content" directory, except:
# "mu-plugins", "plugins", "themes" directory
wp-content/*
!wp-content/mu-plugins/
!wp-content/plugins/
!wp-content/themes/

# wordpress: ignore these plugins
wp-content/plugins/hello.php

# wordpress: ignore specific themes
wp-content/themes/twenty*/

# wordpress: ignore node dependency directories
node_modules/

# ignore log files and databases
*.log
*.sql
*.sqlite

## ignore directories 
node_modules/
dist/
.tmp/

